{
  "name": "@xlit/di",
  "version": "2.3.1",
  "description": "xlit dependency injection custom element",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "files": [
    "/index.{js,js.map}",
    "/*.{d.ts,d.ts.map}"
  ],
  "scripts": {
    "prepublish": "pnpm clean; pnpm build",
    "clean": "rm -rf coverage index.js *.d.ts *.map",
    "lint": "wireit",
    "lint:eslint": "eslint ./src",
    "lint:ts": "tsc --noEmit",
    "build": "wireit",
    "build:js": "esbuild ./src/index.ts --packages=external --bundle --platform=neutral --minify --sourcemap --outdir=./",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "wtr",
    "test:watch": "wtr --watch",
    "examples": "vite ./examples"
  },
  "wireit": {
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:ts"
      ]
    },
    "build": {
      "dependencies": [
        "lint",
        "build:js",
        "build:types"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reekoheek/xlit.git"
  },
  "keywords": [
    "di",
    "dependency injection",
    "customelements",
    "webcomponents"
  ],
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reekoheek/xlit/issues"
  },
  "homepage": "https://github.com/reekoheek/xlit#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "testutil": "workspace:*"
  }
}
