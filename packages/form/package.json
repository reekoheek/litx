{
  "name": "@xlit/form",
  "version": "0.2.1",
  "description": "xlit form custom element",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "files": [
    "/*.d.ts",
    "/*.js.map",
    "!/*.test.*",
    "/index.js",
    "/Form.js",
    "/*Type.js",
    "/*Error.js"
  ],
  "scripts": {
    "prepublish": "npm run clean; npm run build",
    "clean": "rm -rf index.js Form.js *Type.js ValidationError.js *.js.map *.d.ts *.test.js examples asserts utils",
    "lint": "eslint ./src",
    "build": "tsc",
    "test": "wtr --files './src/**/*.test.ts' --node-resolve --coverage",
    "examples": "vite ./src/examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reekoheek/xlit.git"
  },
  "keywords": [
    "form",
    "customelements",
    "webcomponents"
  ],
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reekoheek/xlit/issues"
  },
  "homepage": "https://github.com/reekoheek/xlit#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "lit": "^2.7.4"
  }
}
