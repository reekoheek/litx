{
  "name": "@xlit/form",
  "version": "2.3.0",
  "description": "xlit form custom element",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./types/BooleanType.js": {
      "types": "./types/BooleanType.d.ts",
      "default": "./types/BooleanType.js"
    },
    "./types/NumberType.js": {
      "types": "./types/NumberType.d.ts",
      "default": "./types/NumberType.js"
    },
    "./types/ObjectType.js": {
      "types": "./types/ObjectType.d.ts",
      "default": "./types/ObjectType.js"
    },
    "./types/StringType.js": {
      "types": "./types/StringType.d.ts",
      "default": "./types/StringType.js"
    }
  },
  "sideEffects": false,
  "files": [
    "/index.{js,js.map}",
    "/*.{d.ts,d.ts.map}",
    "/types/"
  ],
  "scripts": {
    "prepublish": "pnpm clean; pnpm build",
    "clean": "rm -rf coverage types index.js *.d.ts *.map",
    "lint": "pnpm lint:eslint && pnpm lint:ts",
    "lint:eslint": "eslint ./src",
    "lint:ts": "tsc --noEmit",
    "build": "pnpm lint && pnpm build:js && pnpm build:types",
    "build:js": "esbuild ./src/index.ts ./src/types/*.ts --packages=external --external:../index.js --bundle --format=esm --minify --sourcemap --outdir=./",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "wtr",
    "test:watch": "wtr --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reekoheek/xlit.git"
  },
  "keywords": [
    "form",
    "customelements",
    "webcomponents"
  ],
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reekoheek/xlit/issues"
  },
  "homepage": "https://github.com/reekoheek/xlit#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "lit": "^2.7.4",
    "testutil": "workspace:*"
  },
  "dependencies": {
    "lit": "^2.7.4"
  }
}
